<% layout("/layouts/boilerplate") %>
<body>
   
    <div class="row mt-3">
        <div class="col-8 offset-2">
             <h3> <%= listing.title%></h3>
             </div>
<div class="card col-6 offset-2 listing-card">
         <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-text">
   
     <%= listing.description%><br>
    &#8377;<%=listing.price ? listing.price.toLocaleString("en-IN") :"1200"%>/nigth<br>
    <%= listing.location%><br>
    <%= listing.country%>
    </p>
  </div>
  </div>
  <div class="btn">
   
        <form method="get" action="/listings/<%=listing._id%>/edit">
        <button class="btn btn-dark offset-2  v">edit</button>
    </form>
     
     
    <form method="post" action="/listings/<%=listing.id%>/delete?_method=DELETE">
        <button class="btn btn-dark offset-4 add-btn  v ">DELETE</button>

    </form>
    
 </div>
 <hr>
 <div class="col-8 offset-2 mb-3">
    <h3>Rating section</h3>
    <form action="/listings/<%=listing._id%>/review" method="post" class="needs-validation" novalidate >
        <div mb-3 mt-3>
            <label for="rating" class="form-label form-range">Tating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-control form-range">
        </div>
        <div mb-3 mt-3>
            <label for="commet" class="form-label">Cmments</label>
            <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
            placeholder="write something"
            required 
            ></textarea>
            <div class="invalid-feedback">pls write your review üò¢...</div>
        </div>

      <button class="btn btn-outline-dark mt-3">Submit</button>
    </form>
 
 <hr>
 <div class="row">
    <p><b>Rating & Reviews </b></p>
    <% for(let review of  listing.reviews) { %>
        <div class="card col-5 ms-5 mb-3">
            <div class="card-body ">
                <h5 class="card-title">Jane Doe</h5>
                <p class="card-text"><%=review.comment%></p>
                <p class="card-text"><%=review.rating%>‚≠ê</p>
            </div>
 <form action="/listings/<%=listing._id%>/delete/<%= review._id %>?_method=DELETE" method="post">
    <button class="btn btn-dark p-1 mb-2 mt-2" >DELETE</button>
 </form>
      </div>
   <% }%>
 </div>
 </div>
 </div>
    
</body>
