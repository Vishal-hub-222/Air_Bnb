<% layout("/layouts/boilerplate") %>
    <h3>You can edit you post </h3>
     <div class="row"></div>
      <div class="col-8 offset-2" >
    <form method="POST" action="/listings/<%=listing._id%>/edit?_method=PUT" class="needs-validation" novalidate
         enctype="multipart/form-data" >
          <div class="mb-3">
              <lable for="title" class="form-label" >Title</lable>
               <input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control" required>
                <div class="invalid-feedback">title should be valid  </div>
        </div>
        <div class="mb-3">
                <lable for="Description" class="form-label" >Description</lable>
                 <textarea type="textarea"  name="listing[description]" cols="50" rows="6" class="form-control" required><%=listing.description%></textarea>
                  <div class="invalid-feedback">Description should be valid  </div>
        </div>
        <div class="mb-3  ">
            <img src="<%= originaImage %>"class="card-img-top"style="height: 20rem" alt="listing image">
    </div>
    <div class="mb-3">
         <lable for="image" class="form-label" > upload image</lable>
         <input name="listing[image]"   type="file" class="form-control" >
          <div class="invalid-feedback">Image should be valid  </div>
    </div>
    <div class="row">
          <div class="mb-3 col-md-4">
        <lable for="price" class="form-label" >price</lable>
          <input name="listing[price]" value="<%=listing.price%>" type="number" class="form-control" required>
           <div class="invalid-feedback">price should be valid  </div>
       </div>
       
    <div class="mb-3 col-md-8">
          <lable for="country" class="form-label" >country</lable>
           <input name="listing[country]"  value="<%=listing.country%>"  type="text" class="form-control" required>
            <div class="invalid-feedback">country should be valid  </div>
    </div>
    </div>
     
      
    <div class="mb-3">
          <lable for="location" class="form-label" >location</lable>
         <input name="listing[location]" value="<%=listing.location%>"  type="text" class="form-control" required>
          <div class="invalid-feedback">Location should be valid  </div>
    </div>
         <button class="btn btn-dark add-btn">submit</button> 
         <br>
         <br>
    </form>
        </div>
    </div>


